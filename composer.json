{
    "name": "wsssoftware/laravue-toolkit",
    "description": "A laravel and vue toolkit",
    "keywords": [
        "wsssoftware",
        "laravel",
        "laravue-toolkit"
    ],
    "homepage": "https://github.com/wsssoftware/laravue-toolkit",
    "license": "MIT",
    "authors": [
        {
            "name": "Allan Carvalho",
            "email": "allan.m.carvalho@outlook.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.9.2",
        "illuminate/contracts": "^9.0"
    },
    "require-dev": {
        "laravel/pint": "^1.0",
        "nunomaduro/collision": "^6.0",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Laravue\\": "src",
            "Laravue\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Laravue\\Tests\\": "tests"
        }
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Laravue\\LaravueToolkitServiceProvider"
            ],
            "aliases": {
                "LaravueToolkit": "Laravue\\Facades\\LaravueToolkit"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
